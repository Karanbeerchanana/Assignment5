<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Projects</title>
    <link rel="stylesheet" href="/css/main.css" />
  </head>
  <body tabindex="-1">
    <%- include('partials/navbar', {page:"/solutions/projects"}) %>

    <br />

    <div class="container mx-auto">
      <div class="hero rounded-lg p-6">
        <div class="hero-content text-center">
          <div class="max-w-md">
            <h1 class="text-5xl font-bold">Projects</h1>
            <p class="py-6">
              Browse the current list of Projects in our database. Click the
              theme to filter by sectors such as:
            </p>
            <a
              href="/solutions/projects?sector=industry"
              class="btn btn-primary mt-6"
              >Industry</a
            >
            <a
              href="/solutions/projects?sector=transportation"
              class="btn btn-primary mt-6"
              >Transportation</a
            >
            <a
              href="/solutions/projects?sector=electricity"
              class="btn btn-primary mt-6"
              >Electricity</a
            >
          </div>
        </div>
      </div>

      <!-- Add Project Button -->
      <div class="text-right mb-4">
        <a href="/solutions/addProject" class="btn btn-success">Add Project</a>
      </div>

      <div class="overflow-x-auto">
        <table class="table table-xs table-pin-rows table-pin-cols">
          <tbody>
            <% projects.forEach(project => { %>
            <tr>
              <td><%= project.title %></td>
              <td>
                <a
                  href="/solutions/projects?sector=<%= project.sector %>"
                  class="btn btn-primary mt-6"
                  ><%= project.sector %></a
                >
              </td>
              <td><%= project.summary_short %></td>
              <td>
                <a
                  href="/solutions/projects/<%= project.id %>"
                  class="btn btn-primary mt-6"
                  >Details</a
                >
              </td>
              <td>
                <a
                  href="/solutions/editProject/<%= project.id %>"
                  class="btn btn-success mt-6"
                  >Edit</a
                >
              </td>
              <td>
                <!-- Delete button using form to send POST request -->
                <form
                  action="/solutions/deleteProject/<%= project.id %>"
                  method="POST"
                  onsubmit="return confirm('Are you sure you want to delete this project?');"
                >
                  <button type="submit" class="btn btn-danger mt-6">
                    Delete
                  </button>
                </form>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </body>
</html>
