<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>addProject</title>
    <link rel="stylesheet" href="/css/main.css" />
  </head>
  <body>
    <div class="container mx-auto mt-8">
      <h1>Add Project</h1>
      <form action="/solutions/addProject" method="POST">
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" required />

        <label for="feature_img_url">Feature Image URL:</label>
        <input
          type="url"
          id="feature_img_url"
          name="feature_img_url"
          required
        />

        <label for="sector_id">Sector:</label>
        <select id="sector_id" name="sector_id" required>
          <% sectors.forEach(sector => { %>
          <option value="<%= sector.id %>"><%= sector.sector_name %></option>
          <% }) %>
        </select>

        <label for="intro_short">Introduction:</label>
        <textarea id="intro_short" name="intro_short" required></textarea>

        <label for="summary_short">Summary:</label>
        <textarea id="summary_short" name="summary_short" required></textarea>

        <label for="impact">Impact:</label>
        <textarea id="impact" name="impact" required></textarea>

        <label for="original_source_url">Source URL:</label>
        <input
          type="url"
          id="original_source_url"
          name="original_source_url"
          required
        />

        <button type="submit" class="btn-primary text-white border-1">
          Add Project
        </button>
      </form>
    </div>
  </body>
</html>
